<Window x:Class="Fiddle.UI.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fiddle"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        MinWidth="400" MinHeight="200"
        Width="1000" Height="700"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <md:DialogHost Name="EditorDialogHost">
        <Grid Name="EditorGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Language Selection-->
            <ComboBox Grid.Row="0" Grid.Column="0" Margin="15 10 10 10"
                      md:HintAssist.Hint="Language" Name="ComboBoxLanguage"
                      SelectionChanged="ComboBoxLanguageSelected">
                <ComboBoxItem>C#</ComboBoxItem>
                <!--<ComboBoxItem>VB</ComboBoxItem>-->
                <!--<ComboBoxItem>C++</ComboBoxItem>-->
                <ComboBoxItem>Python</ComboBoxItem>
                <ComboBoxItem>Java</ComboBoxItem>
                <ComboBoxItem>LUA</ComboBoxItem>
            </ComboBox>

            <!--Compile Button-->
            <Button Grid.Row="0" Grid.Column="1" Margin="10"
                    Background="#263238" Height="45" Width="45"
                    Click="ButtonCompile" BorderBrush="#263238"
                    Padding="-10" ToolTip="Compile">
                <md:PackIcon Kind="AutoFix" Foreground="Gray"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Height="25" Width="25"/>
            </Button>

            <!--Execute Button-->
            <Button Grid.Row="0" Grid.Column="2" Margin="10"
                    Background="#263238" Height="45" Width="45"
                    Click="ButtonExecute" BorderBrush="#263238"
                    Padding="-10" ToolTip="Execute">
                <md:PackIcon Kind="Play" Foreground="Green"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center" 
                             Height="25" Width="25"/>
            </Button>

            <!--Save Button-->
            <Button Grid.Row="0" Grid.Column="3" Margin="10"
                    Background="#263238" Height="45" Width="45"
                    Click="ButtonSave" BorderBrush="#263238"
                    Padding="-10" ToolTip="Save"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" >
                <md:PackIcon Kind="ContentSave" Foreground="DodgerBlue"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Center" 
                             Height="25" Width="25"/>
            </Button>

            <!--Source Code Editor-->
            <!--<DockPanel Grid.Row="1"
                       Grid.Column="0" Grid.ColumnSpan="4" Margin="5"
                       Background="#374349">
                <RichTextBox Name="TextBoxCode" Background="#374349" Margin="5"
                             FontFamily="Consolas" FontSize="14" Foreground="White"
                             AcceptsTab="True" BorderThickness="0"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             KeyDown="TextBoxCode_KeyDown"/>
            </DockPanel>-->

            <avalonEdit:TextEditor
                Grid.Row="1"
                Grid.Column="0" Grid.ColumnSpan="4"
                xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                Name="TextBoxCode"
                SyntaxHighlighting="C#"
                FontFamily="Consolas"
                FontSize="12pt"
                Foreground="White" Padding="10"
                Background="#374349" Margin="5"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                ShowLineNumbers="True"
                TextChanged="TextBoxCode_DocumentChanged"/>

            <Grid Grid.Row="2" Margin="5"
                  Grid.Column="0" Grid.ColumnSpan="4"
                  Background="#374349"
                  Name="GridResultsView">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Name="LabelStatusMessage"
                       Grid.Column="0"
                       Content="Loading.."/>
                <Label Name="LabelCompileTime"
                       Grid.Column="1"
                       ToolTip="Compile time (ms)"/>
                <Label Name="LabelExecuteTime"
                       Grid.Column="2"
                       ToolTip="Execute time (ms)"/>
            </Grid>
        </Grid>
    </md:DialogHost>
</Window>



